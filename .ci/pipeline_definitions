dependency-watchdog:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        oci-builder: docker-buildx
        platforms:
        - linux/amd64
        - linux/arm64
        dockerimages:
          dependency-watchdog:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/dependency-watchdog'
            dockerfile: 'Dockerfile'
            inputs:
              repos:
                source: ~
              steps:
                build: ~
    steps:
      check:
        image: 'golang:1.19.2'
      test-unit:
        image: 'golang:1.19.2'
      build:
        image: 'golang:1.19.2'
        output_dir: 'binary'

  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        component_descriptor: ~
